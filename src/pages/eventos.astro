---
// src/pages/eventos.astro
import Layout from "./Layout.astro";
import Navbar from "../shared/components/layouts/Navbar.astro";
import Footer from "../shared/components/layouts/Footer.astro";
import { events } from "../data/events"; 
---

<Layout title="Eventos - TeamLag">
  <Navbar />
  
  <main class="pt-32 pb-20 min-h-screen relative overflow-hidden bg-[#0a0a14]">
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10 pointer-events-none">
        <div class="absolute top-[10%] left-[20%] w-96 h-96 bg-purple-600/20 rounded-full blur-[120px] animate-pulse-slow"></div>
        <div class="absolute bottom-[10%] right-[20%] w-96 h-96 bg-blue-600/20 rounded-full blur-[120px] animate-pulse-slow" style="animation-delay: 1s;"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
      
      <div class="text-center mb-20">
        <h1 class="text-5xl md:text-7xl font-bold font-orbitron mb-6 text-white tracking-wider">
          NUESTROS <span class="bg-gradient-to-r from-purple-500 to-blue-500 text-transparent bg-clip-text">EVENTOS</span>
        </h1>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto leading-relaxed">
          Explora las diferentes ediciones de los premios, vota por tus favoritos y descubre la historia de nuestra comunidad.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-7xl mx-auto">
        
        {events.map((event) => (
          <a 
            href={`/eventos/${event.slug}`} 
            class="group relative block h-[28rem] rounded-3xl overflow-hidden border border-white/10 bg-white/5 transition-all duration-500 hover:border-purple-500/50 hover:shadow-[0_0_40px_rgba(168,85,247,0.25)] hover:-translate-y-2"
          >
            <div class="absolute inset-0 overflow-hidden">
                <img 
                  src={event.banner} 
                  alt={event.title} 
                  class="w-full h-full object-cover opacity-60 group-hover:opacity-40 group-hover:scale-110 transition-all duration-700 ease-in-out" 
                />
                <div class="absolute inset-0 bg-linear-to-t from-black via-black/60 to-transparent"></div>
            </div>

            <div class="absolute inset-0 p-8 flex flex-col justify-end">
                <div class="mb-6 transform group-hover:-translate-y-1 transition-transform duration-500">
                    
                    {event.status === 'active' && (
                      <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-purple-600/90 backdrop-blur-md text-white text-[10px] font-bold uppercase tracking-widest rounded-full mb-4 shadow-[0_0_15px_rgba(147,51,234,0.6)] animate-pulse">
                        <span class="w-1.5 h-1.5 rounded-full bg-white"></span> En Curso
                      </span>
                    )}
                    {event.status === 'finished' && (
                      <span class="inline-block px-3 py-1 bg-gray-700/80 backdrop-blur-md text-gray-300 text-[10px] font-bold uppercase tracking-widest rounded-full mb-4 border border-white/10">
                        Finalizado
                      </span>
                    )}
                    {event.status === 'upcoming' && (
                      <span class="inline-block px-3 py-1 bg-blue-600/80 backdrop-blur-md text-white text-[10px] font-bold uppercase tracking-widest rounded-full mb-4">
                        Próximamente
                      </span>
                    )}

                    <div class="flex items-center gap-4 mb-3">
                    
                        <h2 class="text-3xl md:text-4xl font-bold font-orbitron text-white group-hover:text-purple-300 transition-colors drop-shadow-lg leading-none">
                          {event.title} <span class="text-white/60 text-2xl">{event.year}</span>
                        </h2>
                        {(event as any).logo && (
                            <img 
                                src={(event as any).logo} 
                                alt={`${event.title} Logo`} 
                                class="w-18 h-18 object-contain drop-shadow-[0_0_10px_rgba(255,255,255,0.3)] group-hover:scale-110 transition-transform duration-300"
                            />
                        )}
                    </div>
                    
                    <p class="text-gray-300 text-sm leading-relaxed line-clamp-3 opacity-90 group-hover:opacity-100 transition-opacity">
                      {event.description}
                    </p>
                </div>

                <div class="flex items-center gap-2 text-purple-400 font-bold uppercase tracking-wider text-xs border-t border-white/10 pt-4 group-hover:border-purple-500/30 transition-colors">
                    <span class="group-hover:translate-x-1 transition-transform duration-300">
                      {event.status === 'finished' ? 'Ver Resultados' : 'Ir al Evento'}
                    </span>
                    <svg class="w-4 h-4 group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                </div>
            </div>
          </a>
        ))}

        <div class="relative h-112 rounded-3xl overflow-hidden border-2 border-dashed border-white/5 bg-white/2 flex items-center justify-center group cursor-default hover:border-white/10 transition-colors">
            <div class="absolute inset-0 bg-[url('/img/colbars.gif')] opacity-[0.03] bg-cover grayscale group-hover:opacity-[0.05] transition-opacity"></div>
            <div class="text-center p-6 relative z-10 opacity-50 group-hover:opacity-80 transition-opacity">
                <h3 class="text-xl font-bold font-orbitron text-gray-400 mb-1">Más Eventos</h3>
                <p class="text-sm text-gray-600">Pronto anunciaremos nuevas ediciones</p>
            </div>
        </div>

      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.4; transform: scale(1); }
    50% { opacity: 0.25; transform: scale(1.1); }
  }
  .animate-pulse-slow {
    animation: pulse-slow 8s infinite ease-in-out;
  }
</style>